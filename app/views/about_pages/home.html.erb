<%= javascript_pack_tag 'hello_vue' %>  
<%= javascript_pack_tag 'custom_vue' %>  


<!-- Main -->
<main>
  <!-- top slider -->
  <div class="container-fluid p-0">
    <div class="site-slider">
      <div class="slider-one">
        <%= image_pack_tag 'media/images/shopping.png', class: "img-fluid", alt: "トップページ画像" %> 
        <%= image_pack_tag 'media/images/top-image.jpeg', class: "img-fluid", alt: "トップページ画像" %> 
        <%= image_pack_tag 'media/images/letao.jpeg', class: "img-fluid", alt: "トップページ画像" %> 
      </div>
      <div class="slider-btn">
        <span class="prev position-top"><i class="fas fa-chevron-left"></i></span>
        <span class="next position-top right-0"><i class="fas fa-chevron-right"></i></span>
      </div>
    </div>
  </div>
  <!-- /top slider -->

  <!-- second slider -->
  <div class="container-fluid">
    <div class="site-slider-two px-md-4">
    <h3 class="mt-5">人気の催事商品</h3>
      <div class="row slider-two text-center">
        <div class="col-md-2 product pt-md-5 pt-4">
          <%= image_pack_tag 'media/images/letao.jpeg', alt: "トップページ画像" %>
          <span class="border site-btn btn-span">Letao</span>
        </div>
        <div class="col-md-2 product pt-md-5 pt-4">
          <%= image_pack_tag 'media/images/ito-kyuemon.jpeg', alt: "トップページ画像" %>
          <span class="border site-btn btn-span">伊藤久右衛門</span>
        </div>
        <div class="col-md-2 product pt-md-5 pt-4">
          <%= image_pack_tag 'media/images/omusubi-cake.png', alt: "トップページ画像" %>
          <span class="border site-btn btn-span">OMUSUBI Cake</span>
        </div>
        <div class="col-md-2 product pt-md-5 pt-4">
          <%= image_pack_tag 'media/images/imano.jpeg', alt: "トップページ画像" %>
          <span class="border site-btn btn-span">いまのフルーツファクトリー</span>
        </div>
        <div class="col-md-2 product pt-md-5 pt-4">
          <%= image_pack_tag 'media/images/hits-company.jpeg', alt: "トップページ画像" %>
          <span class="border site-btn btn-span">カラフルわたあめ</span>
        </div>
        <div class="col-md-2 product pt-md-5 pt-4">
          <%= image_pack_tag 'media/images/amane.jpeg', alt: "トップページ画像" %>
          <span class="border site-btn btn-span">天音</span>
        </div>
      </div>
      <div class="slider-btn">
        <span class="prev position-top">
          <i class="fas fa-chevron-left fa-2x"></i>
        </span>
        <span class="next position-top right-0">
          <i class="fas fa-chevron-right fa-2x text-secondary"></i>
        </span>
      </div>
    </div>
  </div>

  <!-- /second slider -->

</main>

