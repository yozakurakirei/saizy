<!-- header -->
<header>
  <div class="l-header container">
    <div class="row">
      <!-- top-dropdown-left -->
      <div class="col-md-4 col-sm-12 col-12">
        <div class="btn-group">
          <button 
          class="btn border dropdown-toggle my-md-3 text-white"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false">
          Ather
          </button>
          <div class="dropdown-menu">
            <%= link_to 'アパレル', "#", class: "dropdown-item" %>
            <%= link_to '開発者情報', "#", class: "dropdown-item" %>
            <%= link_to 'github', "#", class: "dropdown-item" %>
          </div>
        </div>
      </div>
      <!-- center logo -->
      <div class="col-md-4 col-12 text-center">
        <%= link_to 'Saizy', root_path, class: "my-md-3 site-title text-white site-logo" %>
      </div> 
      <!-- top-dropdwn-right -->
      <div class="col-md-4 col-12 text-right">
        <p class="my-md-4 header-links text-white">
        <% if logged_in? %>
          <%= link_to 'アカウント', current_user %>          
          <%= link_to 'アカウント設定', edit_user_path(current_user) %>          
        <% else %>
          <%= link_to 'ログイン', login_path, class: "px-2" %>
          <%= link_to '新規登録（無料）', signup_path, class: "px-1" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
  <!-- second-header -->
  <div class="container-fluid p-0">
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- nav-left -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to '催事情報', "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '洋菓子', "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '和菓子', "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '惣菜', "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'その他', "#", class: "nav-link" %>
            </li>
          </ul>
        </div>
        <!-- nav-right -->
        <div class="navbar-nav">
          <li class="nav-item border rounded-circle mx-2 search-icon">
            <i class="fas fa-search"></i>
          </li>
          <li class="nav-item border rounded-circle mx-2 like-icon">
            <i class="far fa-heart"></i>
          </li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= gravatar_for @user, class: "gravatar-img", size: 30 %>
              </a>  
              <ul class="dropdown-menu">
                <li><%= link_to 'マイページ', "#", class: "dropdown-item" %></li>
                <li><%= link_to 'アカウント設定', edit_user_path(current_user), class: "dropdown-item" %></li>
                <li><%= link_to 'ログアウト', logout_path, class: "dropdown-item", method: :delete %></li>           
              </ul>          
            </li>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</header>
<!-- /header -->

       




