<header class="header-area">
  <div class="header-logo">
    <%= link_to 'Saizy', root_path, class:"site-logo" %>
  </div>
  <% if logged_in? %>
  <div class="header-right">
    <div class="header-item">
      <%= link_to root_path do%>
        <span><i class="fas fa-home"></i></span>
        <p>ホーム</p>
      <% end %>
    </div>
    <div class="header-item">
      <!-- Scrollable modal -->
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
    </div>
    <div class="header-item">
      <%= link_to new_saizy_path do%>
        <span><i class="fas fa-pen"></i></span>
        <p>投稿</p>
      <% end %>
    </div>
    <div class="header-item" id="dropdown" @click.stop.prevent="toggle()">
      <%= link_to user_path(current_user) do%>
        <span><i class="far fa-user-circle"></i></span>
        <p>マイページ</p>
      <% end %>
      </div>
    <div class="header-item">
      <%= link_to logout_path, method: :delete do%>
      <span><i class="fas fa-sign-out-alt"></i></span>
      <p>ログアウト</p>
      <% end %>
    </div>
  </div>
  <% else %>
  <div class="header-right">
    <div class="header-list">
      <div class="login-btn-area">
        <%= link_to 'ログイン', login_path, class: "login-btn" %>
      </div>
      <div class="signup-btn-area">
        <%= link_to '新規登録', signup_path, class: "signup-btn" %>
      </div>
    </div>
  </div>
  <% end %>
</header>
