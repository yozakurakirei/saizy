<% if logged_in? %>
<h1>開催中の催事一覧</h1>
<ul>
  <% @saizies.published.each do |saizy| %>
    <li>
      <%= saizy.name %>
      <%= saizy.title %>
      <% saizy.tags.each do |tag| %>
        <h3>タグ</h3><%= tag.name %>
      <% end %>
      <%= link_to saizy_path(saizy) do%>
        <% if saizy.images.count > 0 %>
          <%= image_tag saizy.images.first.variant(resize: "200x200").processed %>
        <% end %>
      <% end %>

      <%= link_to user_path(saizy.user_id) do%>
        <%= saizy.user.name %>
      <% end %>
    </li>
  <% end %>
</ul>


<h1>過去に開催されていた催事</h1>
<% @saizies.deleted.each do |saizy| %>
        <% if saizy.images.count > 0 %>
          <%= image_tag saizy.images.first.variant(resize: "200x200").processed %>
        <% end %>
<% end %>

<h1>みんなの投稿</h1>
  <% @microposts.each do |micropost| %>
  <ul>
      <li>
        <%= micropost.user.name %>
        <%= micropost.title%>
        <%= image_tag micropost.display_image if micropost.image.attached? %>
      </li>
    <% end %>
  </ul>




<% else %>
