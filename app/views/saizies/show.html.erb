<% if logged_in? %>

<h2>催事投稿詳細</h2>

<%= @saizy.title %>

<%= @saizy.tags.each do |tag| %>
  <h2>タグ</h2><%= tag.name %>
<% end %>

<% if @saizy.images.attached? %>
<div class="images">
  <% @saizy.images.each do |image| %>
    <%= image_tag image.variant(resize: "300x300") %>
  <% end %>
</div>
<% end %>

<%= @saizy.name %>
<%= @saizy.place %>
<%= @saizy.open %>〜<%= @saizy.close %>
