<% provide(:title, "ログイン")%>
<!-- login -->
<div class="form-area">
  <div class="form-title">
    <h2>ログイン</h2>
  </div>

  <%= form_with(model: @session, url: login_path, scope: :session, local: true) do |f| %>
    <div class="form-item">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-input", placeholder: "Eメール", required: true %> 
    </div>

    <div class="form-item">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, class: "form-input", placeholder: "パスワード", required: true %>
    </div>

    <div class="form-item">
      <div class="form-text">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span>ログインしたままにする</span>
        <% end %>
      </div>
    </div>
    
    <div class="form-item">
      <div class="form-btn">
        <span><%= f.submit "ログイン", class: "form-button" %></span> 
      </div>
    </div>
    <div class="form-item">
      <div class="form-text-dsc">
        <p>パスワードをお忘れの方は<%= link_to 'こちら', new_password_reset_path, class: "form-red" %></p>          
        <p>アカウント作成がまだの方は<%= link_to 'こちら', signup_path %>へ</p>
        <p>ログインすると<%= link_to '利用規約', policy_path %>と<%= link_to 'プライバシーポリシー', privacy_path%>
        に同意したことになります。  
      </div>
    </div>
  <% end %>
</div>
