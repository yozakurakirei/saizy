<!-- プロフィールページ -->
<div>
  <div class="profile">
    <div class="profile-card">
      <div class="card-header">
        <div class="profile-img">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar.variant(resize: "300x300"), width:150 %>
          <% else %>
            <%= image_pack_tag 'media/images/candy-apple.jpeg', width: 150 %>
          <% end %>
        </div>
        <div class="profile-nav-info">
          <h3 class="user-name"><%= @user.name %></h3>
          <p class="user-email">
            <% if @user.id == current_user.id %>
              <i class="far fa-envelope mail-icon"></i>
              <%= @user.email %>
              <div class="edit-btn">
                <p><%= link_to 'プロフィールを編集する', edit_user_path(current_user) %></p>  
              </div>
            <% end %>
          </p>
          <p class="user-profile"><%= current_user.profile %></p>
        </div>
      </div>
      <div class="card-footer">
        <div class="numbers">
          <div>投稿数</div>
          <div>出店終了</div>
          <div>下書き</div>
          <div><%= @user.saizies.count %></div>
          <div><%= @user.saizies.deleted.count %></div>
          <div><%= @user.saizies.draft.count %></div>
        </div>
      </div>
    </div>

    <div class="nested2">
      <div>
      リスト
        <span><%= link_to "プロフィール", current_user %></span>
      </div>
      <div>その他</div>
    </div>
  </div>
</div>
