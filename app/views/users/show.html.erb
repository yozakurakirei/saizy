<h1>ダッシュボード</h1>

      <h1>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% else %>
          <%= image_pack_tag 'media/images/candy-apple.jpeg' %>
        <% end %>
        <%= @user.name %>
      </h1>

        <span><%= link_to "プロフィール", current_user %></span>
  
        <% if @user.id == current_user.id %>
          メールアドレス: <%= @user.email %><br>
          <%= link_to '編集', edit_user_path(current_user) %>    
        <% end %>
        プロフィール: <%= current_user.profile %>


  <!-- 投稿一覧 -->
  <h2>投稿一覧</h2>
    <% @user.saizies.each do |saizy| %>
      <li class="microposts">
        <%= saizy.title %>
        <%= saizy.content %>
        <%= link_to saizy_path(saizy) do %>
          <% saizy.images.each do |image| %>
            <%= image_tag image.variant(resize: "300x300") %>
          <% end %>
        <% end %>
      </li>
    <% end %>

      <h3>投稿数: <%= @user.saizies.count %></h3>


