<h1>ブランド一覧</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
        <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "削除", user, method: :delete,
                                   data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </li>
    </li>
  <% end %>
</ul>

<%= will_paginate %>