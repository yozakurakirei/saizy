


<p>レビューを書いてみよう</p>

<div class="rating-box">
  <%= form_with(model: review, url: saizy_reviews_path(saizy), local: true) do |f| %>
    <div class="main-rating">
      <div class="ratings">
        <div id="star-icon">
          <%= f.label :rate, "評価" %>
          <%= f.hidden_field :rate %>
        </div>
      </div>
    </div>
    <div class="rating-content">
      <%= f.text_area :comment, class: "textarea", placeholder: "実装中なのでまだレビューはできません" %>
      <div class="review-button-area">
        <%= f.submit "投稿する", class: "review-btn" %>
        <%= link_to '他のレビューをみてみる', saizy_reviews_path(saizy), class: "other-review-btn" %>    
      </div>
    </div>

  <% end %>
</div>

<script>
  $('#star-icon').raty({
    size      : 30,
    starOff   : '<%= asset_path('star-icon2.png') %>',
    starOn    : '<%= asset_path('star-icon.png') %>',
    starHalf  : '<%= asset_path('star-half.png') %>',
    scoreName : 'review[rate]',
    half      : false,
  });

</script>